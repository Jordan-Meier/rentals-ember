{{#if addNewAnnouncement}}
  <div >
    <form>
      <div class="form-group">
        <label for="date">Date of announcement</label>
        {{input type="date" value=date id="date"}}
      </div>
      <div class="form-group">
        <label for="message">Announcement Message</label>
        {{input value=message id="message"}}
      </div>
      <button {{action 'saveAnnouncement'}}>Save Announcement</button>
    </form>
  </div>
  {{else}}
    <button {{action 'announcementShowForm'}}>Add announcement</button>
  {{/if}}
